# AgentV2 Environment Configuration
# Copy this file to .env and modify the values according to your setup

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=agentv2_db
DB_CHARSET=utf8mb4
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ============================================
# API SERVER CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
MAX_REQUEST_SIZE=104857600
CORS_ORIGINS=*
RATE_LIMIT_RPM=60
RATE_LIMIT_BURST=10

# ============================================
# APPLICATION SETTINGS
# ============================================
DEBUG=true
SECRET_KEY=agentv2-super-secret-key-change-in-production-2024
ENVIRONMENT=development
TIMEZONE=Asia/Jakarta

# ============================================
# FILE STORAGE CONFIGURATION
# ============================================
MAX_FILE_SIZE_MB=50
IMAGE_QUALITY=95
CLEANUP_TEMP_HOURS=24

# ============================================
# YOLO MODEL CONFIGURATION
# ============================================
YOLO_CONFIDENCE=0.25
YOLO_IOU=0.45
YOLO_MAX_DETECTIONS=1000
YOLO_DEVICE=cpu
YOLO_HALF=false
YOLO_AUGMENT=false
PIXEL_MM_RATIO=1.0

# ============================================
# TRAINING CONFIGURATION
# ============================================
TRAINING_EPOCHS=100
TRAINING_BATCH_SIZE=16
TRAINING_IMAGE_SIZE=640
TRAINING_LR=0.01
TRAINING_PATIENCE=50
TRAINING_MIN_DELTA=0.001
TRAINING_SAVE_PERIOD=10
TRAINING_VAL_SPLIT=0.2

# ============================================
# BACKGROUND TASKS
# ============================================
TASK_MAX_WORKERS=4
TASK_TIMEOUT=3600
TASK_RETRY_ATTEMPTS=3
TASK_RETRY_DELAY=60
TASK_CLEANUP_INTERVAL=300
TASK_MAX_QUEUE_SIZE=100

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=INFO
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_CONSOLE=true

# ============================================
# SECURITY SETTINGS
# ============================================
ACCESS_TOKEN_EXPIRE=30
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
SESSION_TIMEOUT=3600
CSRF_PROTECTION=true

# ============================================
# CACHE CONFIGURATION
# ============================================
CACHE_ENABLED=true
CACHE_BACKEND=memory
REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300
CACHE_MAX_ENTRIES=1000

# ============================================
# MONITORING & METRICS
# ============================================
MONITORING_ENABLED=true
PROMETHEUS_ENABLED=false
PERFORMANCE_TRACKING=true
ERROR_TRACKING=true

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
EMAIL_ENABLED=false
SMTP_SERVER=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=true
FROM_EMAIL=noreply@agentv2.local
ADMIN_EMAILS=

# ============================================
# EXTERNAL API CONFIGURATION
# ============================================
GROQ_API_KEY=
GROQ_API_ENDPOINT=https://api.groq.com/openai/v1/chat/completions

# ============================================
# SYSTEM MAINTENANCE
# ============================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
PROFILING_ENABLED=false
MOCK_DATA=false
DEBUG_SQL=false
TEST_MODE=false
